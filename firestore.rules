rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function for authentication
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function for ownership
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection - user profile and settings
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }

    // Artisans collection - detailed artisan profiles
    match /artisans/{artisanId} {
      allow read: if isAuthenticated();
      allow write, create: if isAuthenticated() && isOwner(artisanId);
    }

    // Crafts collection - craft items and stories
    match /crafts/{craftId} {
      allow read: if isAuthenticated();
      allow write, create: if isAuthenticated();
    }

    // Allow all other collections for development
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}