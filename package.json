{
  "name": "craftstory",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "setup": "node setup-env.js",
    "validate-env": "node scripts/validate-env.js",
    "validate-gemini": "node scripts/validate-gemini.js",
    "validate-setup": "node -e \"import('./src/lib/setup-validator.js').then(m => m.validateAppSetup().then(r => m.logSetupValidation(r)))\"",
    "functions:install": "cd functions && npm install",
    "functions:build": "cd functions && npm run build",
    "functions:serve": "cd functions && npm run serve",
    "functions:deploy": "cd functions && npm run deploy"
  },
  "dependencies": {
    "@google-cloud/speech": "^7.2.0",
    "@google-cloud/text-to-speech": "^6.3.0",
    "@google-cloud/vertexai": "^1.9.0",
    "@google/generative-ai": "^0.24.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "firebase": "^12.3.0",
    "firebase-admin": "^13.5.0",
    "framer-motion": "^12.23.16",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "next-pwa": "^5.6.0",
